<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MongoDB</title>
  </head>
  <body>
    <h1>MongoDB CRUD </h1>
    {{message}}
    <br />
    {{#if edit_id}}
      <br />
      <h2>Edit</h2>
      <form method="post" action="/update_books/{{edit_id}}">
        <lable>Title</lable>
        <input type="text" name="title" value="{{edit_book.title}}" />
        <lable>Author</lable>
        <input type="text" name="author" value="{{edit_book.author}}" />
        <input type="submit" />
      </form><br /><br />
    {{else}}
      <h2>Create</h2>
      <form method="post" action="/store_books">
        <lable>Title</lable>
        <input type="text" name="title" />
        <lable>Author</lable>
        <input type="text" name="author" />
        <input type="submit" />
      </form><br /><br />
    {{/if}}

    <ul>
      {{#each books}}
        <li>
          {{this.title}}
          -
          {{this.author}}
          <a href="/?edit_id={{this._id}}">Edit</a>
          <a
            href="/?delete_id={{this._id}}"
            onclick="return confirm('Are you sure want to delete?')"
          >Delete</a>
        </li>
      {{/each}}
    </ul>
  </body>
</html>